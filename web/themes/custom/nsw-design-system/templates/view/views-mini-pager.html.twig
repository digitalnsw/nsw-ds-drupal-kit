{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <nav class="pager" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="pager__heading visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="nsw-pagination js-pager__items">
      {% if items.previous %}
        <li class="nsw-pagination__item nsw-pagination__item--prev-page">
          <a class="nsw-direction-link nsw-direction-link--icon-left" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
            <svg class="nsw-icon nsw-icon--rotate-180" focusable="false" aria-hidden="true">
              <use xlink:href="#arrow"></use>
            </svg>
            <span class="nsw-direction-link__text">{{ 'Back'|t }}</span>
          </a>
        </li>
      {% endif %}
      {% if items.current %}
        <li class="nsw-pagination__item nsw-pagination__item--is-active">
          {% trans %}
            <span class="nsw-direction-link is-current" aria-current="page">
             {{ items.current }}
            </span>
          {% endtrans %}
        </li>
      {% endif %}
      {% if items.next %}
        <li class="nsw-pagination__item nsw-pagination__item--next-page">
          <a class="nsw-direction-link" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span class="nsw-direction-link__text">{{ 'Next'|t }}</span>
            <svg class="nsw-icon" focusable="false" aria-hidden="true">
              <use xlink:href="#arrow"></use>
            </svg>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
